<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".A_MainFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHabla"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnLista"
        android:layout_alignStart="@+id/btnLista"
        android:layout_marginTop="81dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLista"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMap"
        android:src="@android:drawable/ic_menu_compass"
        android:layout_below="@+id/btnLista"
        android:layout_marginTop="92dp"
        android:layout_alignRight="@+id/btnLista"
        android:layout_alignEnd="@+id/btnLista"
        android:layout_alignLeft="@+id/btnLista"
        android:layout_alignStart="@+id/btnLista" />
</RelativeLayout>
